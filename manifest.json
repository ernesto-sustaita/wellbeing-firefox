{

  "manifest_version": 2,
  "name": "Wellbeing",
  "version": "1.0",

  "description": "Some helpful tools to increase well being",
  "homepage_url": "https://github.com/ernesto-sustaita/wellbeing-firefox",
  "icons": {
    "48": "icons/wellbeing-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/wellbeing-32.png",
    "default_title": "Wellbeing",
    "default_popup": "popup/main.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]

}